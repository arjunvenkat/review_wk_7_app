<h1>New Event</h1>


<%= form_tag(events_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

    <div>
    <%= label_tag :location %><br />
    <%= text_field_tag :location %>
  </div>

    <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date %>
  </div>

    <div>
    <%= label_tag :time %><br />
    <%= text_field_tag :time %>
  </div>

    <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price %>
  </div>

    <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description %>
  </div>

  
  <div>
    <%= submit_tag "Create Event" %>
  </div>
<% end %>

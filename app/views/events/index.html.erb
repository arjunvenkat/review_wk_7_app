<h1>Events</h1>

<p><%= link_to 'Add a New Event', new_event_url %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Date</th>
      <th>Time</th>
      <th>Price</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.location %></td>
      <td><%= event.date %></td>
      <td><%= event.time %></td>
      <td><%= event.price %></td>
      <td><%= event.description %></td>
  
      <td><%= link_to 'Show', event_url(event) %></td>
      <td><%= link_to 'Edit', edit_event_url(event) %></td>
      <td><%= link_to 'Destroy', event_url(event), method: 'delete', data: { confirm: "Do you really want to delete this event?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>


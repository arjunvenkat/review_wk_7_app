<h1>Editing Event #<%= @event.id %></h1>


<%= form_tag(event_url(@event), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @event.title %>
  </div>

  <div>
    <%= label_tag :location %><br />
    <%= text_field_tag :location, @event.location %>
  </div>

  <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date, @event.date %>
  </div>

  <div>
    <%= label_tag :time %><br />
    <%= text_field_tag :time, @event.time %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price, @event.price %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description, @event.description %>
  </div>

  
  <div>
    <%= submit_tag "Update Event" %>
  </div>

<% end %>

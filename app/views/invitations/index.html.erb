<h1>Invitations</h1>

<p><%= link_to 'Add a New Invitation', new_invitation_url %></p>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Name</th>
      <th>Email</th>
      <th>Rsvp</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @invitations.each do |invitation| %>
    <tr>
      <td><%= invitation.host_id %></td>
      <td><%= invitation.name %></td>
      <td><%= invitation.email %></td>
      <td><%= invitation.rsvp %></td>
  
      <td><%= link_to 'Show', invitation_url(invitation) %></td>
      <td><%= link_to 'Edit', edit_invitation_url(invitation) %></td>
      <td><%= link_to 'Destroy', invitation_url(invitation), method: 'delete', data: { confirm: "Do you really want to delete this invitation?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

